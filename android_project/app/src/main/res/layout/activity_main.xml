<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:padding="15dp"
    tools:context=".MainActivity"
    tools:ignore="HardcodedText">


    <LinearLayout
        android:id="@+id/id_scroll_conflict"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/id_scroll_example"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="showScrollConflict"
            android:text="滚动嵌套" />

        <Button
            android:id="@+id/id_button_sensor_01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="showSensorEvent"
            android:text="传感器">

        </Button>

<!--        <Button-->
<!--            android:id="@+id/id_btn_component_01"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:onClick="showLoginActivity"-->
<!--            android:text="组件跳转">-->

<!--        </Button>-->


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="showNoteActivity"
            android:text="Room使用" />


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="toNDKActivity"
            android:text="NDK调用" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="toHttpActivity"
            android:text="Http模块" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="toNavigationActivity"
            android:text="Navigation模块" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="toFunActivity"
            android:text="功能模块" />


    </LinearLayout>


</ScrollView>


