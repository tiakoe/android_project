<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    tools:context=".scroll_conflict.ExampleActivity03">

    <com.example.myapplication.scroll_conflict.MyScrollView
        android:id="@+id/id_scroll_view_03"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@color/colorAccent"
                android:text="这是头部" />

            <com.example.myapplication.scroll_conflict.MyRecyclerView
                android:id="@+id/id_recycler_view_03"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="#3CB371" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:background="@color/colorAccent"
                android:text="这是尾部" />

        </LinearLayout>
    </com.example.myapplication.scroll_conflict.MyScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
