<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".customview.view.waveLoading.WaveLoadingViewActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <com.a.fun_module.customview.view.waveLoading.WaveLoadingView
            android:id="@+id/waveView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:centerText="龖"
            app:speed="1200"
            app:textSize="150sp" />

        <com.a.fun_module.customview.view.waveLoading.WaveLoadingView
            android:id="@+id/waveView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/waveView1"
            app:centerText="夜"
            app:speed="1100"
            app:textSize="150sp"
            app:waveColor="@color/colorPrimary" />

        <com.a.fun_module.customview.view.waveLoading.WaveLoadingView
            android:id="@+id/waveView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/waveView2"
            app:centerText="叶"
            app:scaleWidth="0.7"
            app:speed="900"
            app:textSize="150sp"
            app:waveColor="#50a4f7" />

    </RelativeLayout>

</ScrollView>
